{
  "name": "bknd",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "updater": "bun x npm-check-updates -ui",
    "ci": "find . -name 'node_modules' -type d -exec rm -rf {} + && bun install",
    "npm:local": "verdaccio --config verdaccio.yml",
    "format": "bunx biome format --write ./app",
    "lint": "bunx biome lint --changed ./app"
  },
  "dependencies": {
    "@clack/prompts": "^0.11.0"
  },
  "devDependencies": {
    "@clack/prompts": "^0.7.0",
    "@cloudflare/vitest-pool-workers": "^0.8.38",
    "@cloudflare/workers-types": "^4.20250606.0",
    "@biomejs/biome": "1.9.4",
    "@tsconfig/strictest": "^2.0.5",
    "@types/lodash-es": "^4.17.12",
    "bun-types": "^1.1.18",
    "miniflare": "^3.20240806.0",
    "typescript": "^5.5.3",
    "verdaccio": "^5.32.1"
  },
  "engines": {
    "node": ">=22"
  },
  "workspaces": ["app", "packages/*"]
}
